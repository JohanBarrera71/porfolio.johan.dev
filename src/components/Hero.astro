---
const personalImageAlt = "Miguel Ángel";
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
import GitHub from "./icons/GitHub.astro";
import Mail from "@/components/icons/Mail.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="johandev.png"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/johan-barrera-589699283"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, soy Johan Barrera
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:text-gray-300 [&>strong]:font-semibold"
  >
    <strong class="text-teal-500 dark:text-teal-400"
      >Desarrollador Backend con 1 año de experiencia</strong
    >. Especializado en el ecosistema .NET, incluyendo <strong
      class="text-purple-500 dark:text-purple-300"
      >ASP.NET Core MVC, Razor Pages y desarrollo de API Restful</strong
    >. Familiarizado con la implementación de aplicaciones en Azure. Apasionado
    por transformar ideas en aplicaciones funcionales desde Hidalgo, México.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="https://www.linkedin.com/in/johan-barrera-589699283/">
      <LinkedInIcon class="size-4 md:size-6" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/JohanBarrera71">
      <GitHub class="size-4 md:size-6" />
      GitHub
    </SocialPill>
    <SocialPill href="mailto:johan.dev.71@gmail.com">
      <Mail class="size-4 md:size-6" />
      johan.dev.71@gmail.com
    </SocialPill>
  </nav>
</div>
