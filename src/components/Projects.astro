---
import GitHub from "./icons/GitHub.astro";
import JWT from "./icons/JWT.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import TypeScript from "./icons/Typescript.astro";
import SqlServer from "./icons/SqlServer.astro";
import Documentation from "./icons/Documentation.astro";
import Link from "./icons/Link.astro";
import React from "./icons/React.astro";
import LinkButton from "./LinkButton.astro";
import ASPNET from "./icons/ASPNET.astro";
import Swagger from "./icons/Swagger.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  ASPNET: {
    name: "ASP.NET",
    class: "bg-black text-white",
    icon: ASPNET,
  },
  JWT: {
    name: "JWT",
    class: "bg-black text-white",
    icon: JWT,
  },
  React: {
    name: "React",
    class: "bg-black text-white",
    icon: React,
  },
  TypeScript: {
    name: "TypeScript",
    class: "bg-black text-white",
    icon: TypeScript,
  },
  SqlServer: {
    name: "SQL Server",
    class: "bg-black text-white",
    icon: SqlServer,
  },
};
const PROJECTS = [
  {
    title: "Demo LinkedIn - Aplicación backend",
    description:
      "Este es un proyecto de backend desarrollado en ASP.NET Core que simula una aplicación similar a LinkedIn. Permite a los usuarios registrarse, iniciar sesión y gestionar su perfil profesional. Aunque se trata de un backend, también se está desarrollando una versión frontend con React.js y TypeScript.",
    link: "",
    api: "https://demoblogapp-b2h0d9bngkeub4hp.westus2-01.azurewebsites.net/scalar/",
    apiDoc:
      "https://github.com/JohanBarrera71/demo-linkedin-fullstack/blob/master/README.md",
    github: "https://github.com/JohanBarrera71/demo-linkedin-fullstack",
    image: "projects/demo-linkedin.png",
    tags: [TAGS.ASPNET, TAGS.JWT, TAGS.React, TAGS.TypeScript, TAGS.SqlServer],
  },
  {
    title: "Demo Login - Autenticación y autorización de usuarios.",
    description:
      "Este proyecto es una API web desarrollada en ASP.NET Core, diseñada para gestionar el proceso de autenticación y autorización de usuarios. Implementa un sistema de login y registro de usuarios utilizando JSON Web Tokens (JWT) para garantizar un método seguro de manejo de sesiones.",
    //link: "https://demologin-655db.web.app/",
    link: "",
    //api: "https://demologin20250318174321-b3ajanhbejbkdghj.westus2-01.azurewebsites.net/swagger/index.html",
    api: "",
    github: "https://github.com/JohanBarrera71/DemoLogin",
    image: "projects/demo-login.png",
    tags: [TAGS.ASPNET, TAGS.JWT],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(
      ({ image, title, description, tags, link, github, api, apiDoc }) => (
        <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
          <div class="w-full md:w-1/2">
            <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
              <img
                alt="Recién llegado vs 5 años en Nueva Zelanda"
                class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                loading="lazy"
                src={image}
              />
            </div>
          </div>

          <div class="w-full md:w-1/2 md:max-w-lg">
            <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
              {title}
            </h3>
            <div class="flex flex-wrap mt-2">
              <ul class="flex flex-wrap flex-row mb-2 gap-x-2">
                {tags.map((tag) => (
                  <li>
                    <span
                      class={`flex gap-x-2 mb-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                    >
                      <tag.icon class="size-4" />
                      {tag.name}
                    </span>
                  </li>
                ))}
              </ul>

              <div class="mt-2 text-gray-700 dark:text-gray-400">
                {description}
              </div>
              <footer class="flex items-end justify-start mt-4 gap-x-4">
                {github && (
                  <LinkButton href={github}>
                    <GitHub class="size-6" />
                    Code
                  </LinkButton>
                )}
                {link && (
                  <LinkButton href={link}>
                    <Link class="size-4" />
                    Preview
                  </LinkButton>
                )}
                {apiDoc && (
                  <LinkButton href={apiDoc}>
                    <Documentation class="size-5" />
                    API Doc
                  </LinkButton>
                )}
                {api && (
                  <LinkButton href={api}>
                    <Swagger class="size-5" />
                    API
                  </LinkButton>
                )}
              </footer>
            </div>
          </div>
        </article>
      )
    )
  }
</div>
